<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>controllers.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>questionController</servlet-name>
        <servlet-class>controllers.QuestionController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>questionController</servlet-name>
        <url-pattern>/quest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>relationsController</servlet-name>
        <servlet-class>controllers.RelationsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>relationsController</servlet-name>
        <url-pattern>/relat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controllers.authentication.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mainPageController</servlet-name>
        <servlet-class>controllers.pages_controllers.MainPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainPageController</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>controllers.authentication.filters.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>


</web-app>